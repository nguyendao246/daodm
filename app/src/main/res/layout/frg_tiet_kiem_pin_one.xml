<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">


            <com.news.supercleaner.customradar.RadarView
                android:id="@+id/radarView"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/image_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="35dp" />



                <ImageView
                    android:id="@+id/image_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/image_three"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_toLeftOf="@+id/image_three"
                    android:layout_toStartOf="@+id/image_three" />

                <ImageView
                    android:id="@+id/image_three"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="19dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="70dp"
                    android:layout_marginEnd="70dp" />

                <ImageView
                    android:id="@+id/image_four"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/image_five"
                    android:layout_alignLeft="@+id/image_five"
                    android:layout_alignStart="@+id/image_five" />

                <ImageView
                    android:id="@+id/image_five"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginStart="19dp"
                    android:layout_alignBottom="@+id/image_two"
                    android:layout_toRightOf="@+id/image_two"
                    android:layout_toEndOf="@+id/image_two"
                    android:layout_marginBottom="11dp" />

                <ImageView
                    android:id="@+id/image_six"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/image_four"
                    android:layout_toLeftOf="@+id/image_two"
                    android:layout_toStartOf="@+id/image_two" />


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_dang_quet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radarView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Đang quét các ứng dụng gây tốn pin"
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center">

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>